<UserControl
    x:Class="ClipboardCanvas.UserControls.OOBE.IntroductionScreenCollectionPreview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gxt="using:ClipboardCanvas.GlobalizationExtensions"
    xmlns:local="using:ClipboardCanvas.UserControls.OOBE"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <local:IntroductionScreenGenericPreview
        Title="{gxt:ResourceString Name=OOBECollectionPreviewTitle}"
        Description="{gxt:ResourceString Name=OOBECollectionPreviewDescription}"
        PreviewImage="/Assets/OOBE/OOBE_CollectionPreview.png" />
</UserControl>
